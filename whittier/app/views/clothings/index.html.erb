<h1 class="title is-1">
  This is Whittier
</h1>

<details>
  <summary>Shopping Cart</summary>
  <% if @cart.empty? %>
    <p>Nothing in cart</p>
  <% else %>
  <ul>
    <%= @cart.each do |product| %>
      <li><%= product.name %> | <%= link_to 'Remove', remove_from_cart_path(product.id), method: :delete %></li>
    <% end %>
  </ul>
  <% end %>
</details>

<% if current_user %>
  <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
<% else %>
  <%= link_to 'Sign In', new_user_session_path %>
  <%= link_to 'Sign Up', new_user_registration_path %>
<% end %>


<br />
<section class="section">
  <div class="container">
    <div class="columns">
      <%= render partial: 'clothingcard',
        object: @clothes
      %>
    </div>
  </div>
</section>
